<div class="carousel sam-image-carousel hidden-md hidden-lg" id="<%= id %>">
  <!-- Wrapper for slides -->
  <div class="carousel-inner" role="listbox">
<% items.forEach(function(item, i) { %>
  <%if (i === 0) { %>
    <div class="item active">
      <img src="<%= item %>" />
    </div>
  <% } else { %>
    <div class="item">
      <img src="<%= item %>" />
    </div>
  <% } %>
<% }) %>
  </div>
  <!-- Indicators -->
  <ol class="carousel-indicators">
    <% items.forEach(function(item, i) { %>
      <%if (i === 0) { %>
        <li data-target="#<%= id %>" data-slide-to="<%= i %>" class="active"></li>
      <% } else { %>
        <li data-target="#<%= id %>" data-slide-to="<%= i %>"></li>
      <% } %>
    <% }) %>
  </ol>
  <a class="left carousel-control" href="#<%= id %>" role="button" data-slide="prev">
    <img class="img-responsive" src="<%= caretLeft %>">
    <span class="sr-only">Previous</span>
  </a>
  <a class="right carousel-control" href="#<%= id %>" role="button" data-slide="next">
    <img class="img-responsive" src="<%= caretRight %>">
    <span class="sr-only">Next</span>
  </a>
</div>